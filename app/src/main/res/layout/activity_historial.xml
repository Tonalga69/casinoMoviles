<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistorial"
        android:layout_width="411dp"
        android:layout_height="470dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="33dp"
        android:textSize="24sp"
        android:fontFamily="@font/jacques_francois_shadow"
        android:text="@string/historial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBorrarHistorial"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/jacques_francois_shadow"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="55dp"
        android:text="@string/borrar_historial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewHistorial" />
</androidx.constraintlayout.widget.ConstraintLayout>